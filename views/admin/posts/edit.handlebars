<div class="container">
    <h1>Edit Post</h1>
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/posts/edit/{{post._id}}?newMethod=PUT" method="post">
                <div class="form-group">
                    <label for="title">
                        <input type="text" class="form-control" name="title" id="title" placeholder="Enter the title"
                            value={{post.title}}>
                    </label>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="public">Public</option>
                        <option value="public">Private</option>
                        <option value="public">Draft</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="status">Category</label>
                    <select name="category" id="category" class="form-control">
                        {{#select post.category}}
                        {{#each category}}
                        <option value="{{_id}}">{{title}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class="form-check ml-3">
                    <label for="allowComments">
                        <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments">
                        Allow Comments
                    </label>
                </div>
                <div class="form-group">
                    <label for="description">Content</label>
                    <textarea name="description" id="description" placeholder="Enter your content here" rows="10"
                        cols="110">{{post.description}}</textarea>
                </div>
                <button class="btn btn-outline-warning btn-lg" type="submit">Update Post</button>
            </form>
        </div>
    </div>
</div>